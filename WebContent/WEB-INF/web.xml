	<servlet-class>org.PrinterSetupSystem.api.SearchBranchByName</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>ApiGetAllBranchPrinters</servlet-name>
	<servlet-class>org.PrinterSetupSystem.api.GetAllBranchPrinters</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>ApiGetAllBranches</servlet-name>
	<servlet-class>org.PrinterSetupSystem.api.GetAllBranches</servlet-class>
  </servlet>
  
    <!-- Servlets -->
  <servlet>
	<servlet-name>Home</servlet-name>
	<servlet-class>org.PrinterSetupSystem.controller.HomeController</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>Branch</servlet-name>
	<servlet-class>org.PrinterSetupSystem.controller.BranchController</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>Printer</servlet-name>
	<servlet-class>org.PrinterSetupSystem.controller.PrinterController</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>Search</servlet-name>
	<servlet-class>org.PrinterSetupSystem.controller.SearchController</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>Help</servlet-name>
	<servlet-class>org.PrinterSetupSystem.controller.HelpController</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>Login</servlet-name>
	<servlet-class>org.PrinterSetupSystem.controller.LoginController</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>AdminHome</servlet-name>
	<servlet-class>org.PrinterSetupSystem.controller.AdminHomeController</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>AdminAdmins</servlet-name>
	<servlet-class>org.PrinterSetupSystem.controller.AdminAdminsController</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>AdminManualPage</servlet-name>
	<servlet-class>org.PrinterSetupSystem.controller.AdminManualPageController</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>AdminInstallScript</servlet-name>
	<servlet-class>org.PrinterSetupSystem.controller.AdminInstallScriptController</servlet-class>
  </servlet>
  
  <!-- ****************************************************************** -->
  <!-- SSERVLET MAPPINGS -->
  <!--  Mapping -->
  <servlet-mapping>
	<servlet-name>Home</servlet-name>
	<url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
	<servlet-name>Branch</servlet-name>
	<url-pattern>/branch</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
	<servlet-name>Printer</servlet-name>
	<url-pattern>/printer</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
	<servlet-name>Search</servlet-name>
	<url-pattern>/search</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
	<servlet-name>Help</servlet-name>
	<url-pattern>/help</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
	<servlet-name>Login</servlet-name>
	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
	<servlet-name>AdminHome</servlet-name>
	<url-pattern>/adminhome</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
	<servlet-name>AdminAdmins</servlet-name>
