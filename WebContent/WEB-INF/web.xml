<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>PrinterSetupSystem</display-name>
  <welcome-file-list>
    <welcome-file>Home.jsp</welcome-file>
  </welcome-file-list>
  <session-config>
    <session-timeout>21600</session-timeout>
  </session-config>
  
  <!-- ****************************************************************** -->
  <!-- SERVLET CONFIGS -->
  <!-- APIs -->
  <servlet>
	<servlet-name>ApiSearchPrinterByName</servlet-name>
	<servlet-class>org.PrinterSetupSystem.api.SearchPrinterByName</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>ApiSearchPrinterByNameAll</servlet-name>
	<servlet-class>org.PrinterSetupSystem.api.SearchPrinterByNameAll</servlet-class>
  </servlet>
  <servlet>
